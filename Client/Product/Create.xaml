<Page x:Class="Client.Product.Create"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ictrl="clr-namespace:CGMWPF.Front.AppControls;assembly=AppControls"
      xmlns:local="clr-namespace:Client.Product"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Create"
      TextElement.FontSize="14"
      TextElement.FontWeight="Normal"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="White">

    <Grid>
        <StackPanel>
            <ictrl:iItemTitile Text="Create Product"
                                       HorizontalAlignment="Left"
                                       FontSize="25"
                                       FontWeight="Bold"
                                       Padding="0,15,15,15"
                                       Width="200"
                                       TextAlignment="Left"
                                       Grid.Column="0"
                                       Margin="20,0,0,0"
                                       />
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <ictrl:iItemTitile Text="Name"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           Padding="5"
                           HorizontalAlignment="Left"
                           TextAlignment="Left"
                           FontSize="14"/>
                <TextBox
                         Grid.Row="0"
                         Grid.Column="1"
                         Height="40"
                         Padding="10,5,10,5"
                         VerticalContentAlignment="Center"
                         Width="220"
                         VerticalAlignment="Center"
                         Text="{Binding Path=Product.Name}"
                         />
                <ictrl:iItemTitile Text="Description"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           TextAlignment="Left"
                           Margin="20,0,0,0"
                           FontSize="14"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Height="100"
                         Grid.ColumnSpan="2"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Padding="10,10,20,10"
                         BorderBrush="#000"
                         Margin="15,0,0,0"
                         Text="{Binding Path=Product.Description,Mode=TwoWay}"
                         />
                <CheckBox Content="Active"
                          Grid.Row="2"
                          Grid.Column="0"
                          FontSize="14"
                          Margin="20,0,0,0"
                          IsChecked="{Binding Path=Product.IsActive,Mode=TwoWay}"
                          />
                <StackPanel Grid.Row="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Save"
                            Height="40"
                            Width="100"
                            Cursor="Hand"
                            BorderBrush="Transparent"
                            FontSize="14"
                            Foreground="#FFF"
                            Background="#3b97d4"
                            Margin="0,0,20,0"
                            Command="{Binding Path=Save}"
                                                />
                    <Button Content="Cancel"
                            Height="40"
                            Width="100"
                            Cursor="Hand"
                            BorderBrush="Transparent"
                            FontSize="14"
                            Foreground="#FFF"
                            Background="#3b97d4"
                            Command="{Binding Path=Cancel}"
                                                />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
